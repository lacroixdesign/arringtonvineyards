/[if lt IE 9] <html class="ie8 old-ie" lang="en">
<!--[if gte IE 9]><!-->
%html{ lang: "en" }
  <!--<![endif]-->

  %head
    %meta(charset="utf-8")
    %title=raw [yield(:title), "Arrington Vineyards"].reject(&:blank?).join(' | ')
    
    -# koko wa general meta
    %meta{name: "description", content: "Founded by Kix Brooks, Arrington Vineyards is located 25 minutes south of Nashville among the beautiful hills of Arrington, Tennessee."}
    %meta{name: "author", content: "Arrington Vineyards"}
    %meta{:'http-equiv' => "X-UA-Compatible", content: "chrome=1"}
    
    -# koko wa fav and touch icons (reside in the /public folder), plus iOS meta
    %link{rel: "shortcut icon", href: "#{root_url}/favicon.ico"}
    %link{rel: "apple-touch-icon", href: "#{root_url}/apple-touch-icon-57x57-precomposed.png"}
    %link{rel: "apple-touch-icon-precomposed", sizes: "72x72", href: "#{root_url}/apple-touch-icon-72x72-precomposed.png"}
    %link{rel: "apple-touch-icon-precomposed", sizes: "114x114", href: "#{root_url}/apple-touch-icon-114x114-precomposed.png"}
    %link{rel: "apple-touch-icon-precomposed", sizes: "144x144", href: "#{root_url}/apple-touch-icon-144x144-precomposed.png"}
    %meta{name: "viewport", content: "initial-scale=1.0, user-scalable=no, maximum-scale=1.0"}
    %meta{name: "apple-mobile-web-app-capable", content: "yes"}
    %meta{name: "apple-mobile-web-app-status-bar-style", content:"black"}

    -# koko wa HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "html5"
    
    = stylesheet_link_tag "application", media: "all"

    -# koko wa CSS3 polyfill, IE6-8 support of CSS3 pseudo-classes with Selectivizr
    /[if lt IE 9]
      = javascript_include_tag "polyfills"
    
    = csrf_meta_tags
    
    -# koko wa Typekit -- replace VVVVVVV with the proper kit code
    %script{ type: "text/javascript", src: "//use.typekit.net/wyp5qqu.js" }
    :javascript
      try{Typekit.load();}catch(e){}
  
  
  %body

    %nav#l-nav
      .m-menu
        .logo
          = link_to root_url do
            = image_tag "arrington-vineyards.png"
        .toggle= link_to "Menu", "#menu", data: {behavior: "toggle"}
        %ul#menu
          %li= link_to "About Us", "/about"
          %li= link_to "Visit Us", "/visit"
          %li= link_to "News & Events", "/news"
          %li= link_to "Private Events", "/private-events"
          %li= link_to "Wine Club", "/wine-club"
          %li= link_to "Shop", "http://shop.arringtonvineyards.com"
          
    = yield
    
    %footer#l-footer
      .wrap
        %ul
          %li= link_to "Our Wines", "http://shop.arringtonvineyards.com"
          %li &bull;
          %li= link_to "Newsletter", "https://app.e2ma.net/app2/audience/signup/1734822/1722055/?v=a", target: "_blank", onclick: raw("window.open('https://app.e2ma.net/app2/audience/signup/1734822/1722055/?v=a', 'signup', 'menubar=no, location=no, toolbar=no, scrollbars=yes, height=500'); return false;")
          %li &bull;
          %li= link_to "Donations", "/donations"
          %li &bull;
          %li= link_to "FAQ", "/faq"
          %li &bull;
          %li= link_to "Contact Us", "/contact"
          %li.icon= link_to icon("e000"), "https://www.facebook.com/ArringtonVineyards", target: "_blank"
          %li.icon= link_to icon("e001"), "https://twitter.com/avwinery", target: "_blank"
    
    
    
    
    -# koko wa javascript
    = javascript_include_tag "application"
    
    
    -# koko wa Google Analytics -- replace VVVVVVVV-V with the proper code
    - if Rails.env.production?
      :javascript
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-VVVVVVVV-V']);
        _gaq.push(['_trackPageview']);

        (function() {
          var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
          ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();



    
    
    -# koko wa Width Plugin
    - if Rails.env.development?
      #lacroixdesign-browserwidth{style: "position:fixed; bottom:0; left:0; background:#555; color:#CCC; font-size:0.75em; padding:0.25em; text-shadow: 0 -1px 1px rgba(0,0,0,0.9); font-weight:normal;"}
      :javascript
        function showWidth(){var w = $(window).width();$('#lacroixdesign-browserwidth').text(w);}showWidth();$(window).resize(function(){showWidth();});
